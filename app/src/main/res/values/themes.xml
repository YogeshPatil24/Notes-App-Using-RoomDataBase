<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesAppUsingMvvm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red_color</item>
    </style>

    <style name="Theme.NotesAppUsingMvvm" parent="Base.Theme.NotesAppUsingMvvm" />

    <style name="Progressbar">
        <item name="colorSecondary">@color/red_color</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_margin">@dimen/_18sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">@color/red_color</item>
        <item name="maxImageSize">@dimen/_30sdp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="InputEdittextCommon">
        <item name="background">@drawable/edit_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="background">@drawable/dialog_bg_shape</item>
    </style>
</resources>